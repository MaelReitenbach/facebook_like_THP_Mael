<div class="starter-template">
  <h1>Edite un potin !</h1>
  <div style="margin-top: 15px;">
    <p class="alert alert-primary">Voici le potin n° <%= @gossip.id %></p>
    <p class="lead">Change le potin via le formulaire ci-dessous</p>
  </div>
  <div class="form-group">
    <form action='/gossip/<%= @gossip.id %>/edit/' method='POST'>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
     <br/>
      <label>Retravaille ton potin :</label>
      <br>
      <p> Titre du potin: </p>
      <input type='text' class="form-control" name='changed_title' value="<%= @gossip.title %>" /></input><br/>
      <p> Contenu du potin: </p>
      <textarea  type='text' class="form-control" name='changed_content' rows="3" value="" /><%= @gossip.content %></textarea>
      <input type='submit' class="btn btn-primary" value="Changer ce potin" style="margin-top: 10px;"/>
    </form>
  </div>
  <div class="d-flex justify-content-around">
    <%= link_to "Revenir à l'accueil", index_path, class:'btn btn-secondary', style:'margin-top: 20px;' %>
  </div>
</div>
