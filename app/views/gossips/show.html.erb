<div class="starter-template">
  <h1>Page Potin !</h1>
  <div style="margin-top: 15px;">
    <h2>Titre : <%= @gossip.title %></h2><br/>
    <p class="alert alert-primary">Voici la page du potin n° <%= @gossip.id %></p>
    <p>Son auteur : <strong><%= link_to @author, author_path(@gossip.user_id) %></strong></p>
    <p>La ville de l'auteur : <%= @auteurville %></p><br>
    <p>Le contenu du potin : <strong><%= @gossip.content %></strong></p>
    <p>Publié le : <strong><%= @gossip.updated_at.to_time.strftime('%d/%m/%Y %H:%M:%S') %></strong>
  </div> 

  <div>
    <!-- <a href="./ #@gossip.id /edit/" class="btn btn-primary">Editer ce potin</a> -->
  </div>
  <div class="d-flex justify-content-around">
    <%= link_to "Revenir à l'accueil", index_path, class:'btn btn-secondary', style:'margin-top: 20px;' %>
  </div>
</div>
